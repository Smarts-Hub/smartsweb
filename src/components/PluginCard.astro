---
export interface Props {
  name: string;
  description: string;
  image: string;
  features: string[];
  price?: string;
  originalPrice?: string;
  discount?: number;
  downloadUrl?: string;
  purchaseUrl?: string;
}

const { name, description, image, features, price, originalPrice, discount, downloadUrl, purchaseUrl } = Astro.props;
const isFree = !price;
---

<div class="glass-card rounded-2xl overflow-hidden hover-lift group h-full flex flex-col">
  <div class="relative h-48 overflow-hidden flex-shrink-0">
    <div class="w-full h-full transition-transform duration-500 transform-gpu group-hover:scale-110 relative">
      <img 
        src={image} 
        alt={`${name} plugin banner`}
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-slate-900/80 via-transparent to-transparent"></div>
    </div>
    
    {discount && (
      <div class="absolute bottom-4 left-4 z-10">
        <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-bold bg-gradient-to-r from-red-500 to-red-600 text-white shadow-lg backdrop-blur-sm border-2 border-white/60">
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd" />
          </svg>
          -{discount}%
        </span>
      </div>
    )}
    
    <div class="absolute bottom-4 right-4">
      {isFree ? (
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-primary-mint text-slate-900 shadow-lg">
          Free
        </span>
      ) : (
        <div class="flex flex-col items-end gap-2">
          {originalPrice && discount ? (
            <div class="bg-slate-900/50 backdrop-blur-md rounded-lg px-3 py-1.5 shadow-xl">
              <div class="text-right">
                <div class="text-xs text-gray-400 line-through leading-none">
                  {originalPrice}
                </div>
                <div class="text-sm font-bold text-primary-mint leading-none">
                  {price}
                </div>
              </div>
            </div>
          ) : (
            <div class="bg-slate-900/50 backdrop-blur-md rounded-lg px-3 py-1.5 shadow-xl">
              <span class="text-sm font-bold text-primary-mint">
                {price}
              </span>
            </div>
          )}
        </div>
      )}
    </div>
  </div>
  
  <div class="p-6 flex flex-col flex-grow">
    <h3 class="text-xl font-bold text-white mb-2 group-hover:text-primary-mint transition-colors duration-200">
      {name}
    </h3>
    
    <p class="text-gray-300 text-sm mb-4 leading-relaxed flex-grow">
      {description}
    </p>
    
    <div class="mb-6">
      <h4 class="text-sm font-semibold text-primary-mint mb-2">Features:</h4>
      <ul class="space-y-1">
        {features.slice(0, 4).map(feature => (
          <li class="flex items-center text-xs text-gray-400">
            <svg class="w-3 h-3 text-primary-mint mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            {feature}
          </li>
        ))}
      </ul>
    </div>
    
    <div class="flex items-center justify-center mt-auto">
      {downloadUrl ? (
        <a 
          href={downloadUrl}
          class="w-full inline-flex items-center justify-center px-4 py-3 border border-transparent text-sm font-semibold rounded-lg bg-primary-mint text-slate-900 hover:bg-primary-emerald transition-all duration-200 shadow-lg hover:shadow-xl"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
          </svg>
          {isFree ? "Download Free" : "Download"}
        </a>
      ) : purchaseUrl ? (
        <a 
          href={purchaseUrl}
          class="w-full inline-flex items-center justify-center px-4 py-3 border border-transparent text-sm font-semibold rounded-lg bg-primary-blue text-white hover:bg-primary-azure transition-all duration-200 shadow-lg hover:shadow-xl"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
          </svg>
          Buy {price}
        </a>
      ) : (
        <button 
          class="w-full inline-flex items-center justify-center px-4 py-3 border border-gray-600 text-sm font-semibold rounded-lg text-gray-400 bg-gray-800 cursor-not-allowed"
          disabled
        >
          Coming Soon
        </button>
      )}
    </div>
  </div>
</div>