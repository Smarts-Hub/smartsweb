---
export interface Props {
  name: string;
  role: string;
  image: string;
  githubUrl?: string;
}

const { name, role, image, githubUrl } = Astro.props;
---

<a 
  href={githubUrl} 
  target="_blank" 
  rel="noopener noreferrer"
  class="glass-card rounded-2xl p-6 hover-lift group cursor-pointer block transition-transform duration-300 hover:scale-105 relative overflow-hidden"
>
  <!-- Contenido original de la card -->
  <div class="flex flex-col items-center text-center relative z-10 transition-all duration-300 group-hover:blur-sm">
    <div class="relative mb-4">
      <div class="w-20 h-20 rounded-full overflow-hidden ring-2 ring-primary-mint/50 group-hover:ring-primary-blue/70 transition-all duration-300">
        <img 
          src={image} 
          alt={`${name} profile`}
          class="w-full h-full object-cover transition-transform duration-300"
        />
      </div>
    </div>
    
    <h3 class="text-lg font-semibold text-white mb-2 transition-colors duration-200">
      {name}
    </h3>
    
    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gradient-to-r from-primary-mint/20 to-primary-blue/20 text-primary-mint border border-primary-mint/30 transition-all duration-200">
      {role}
    </span>
  </div>

  <!-- Overlay con efecto blur que aparece en hover -->
  <div class="absolute inset-0 bg-gray-900/80 backdrop-blur-sm opacity-0 group-hover:opacity-100 transition-all duration-300 flex items-center justify-center z-20 rounded-2xl">
    <div class="text-center transform scale-75 group-hover:scale-100 transition-transform duration-300">
      <!-- Icono de GitHub grande -->
      <div class="mb-3">
        <svg class="w-12 h-12 text-primary-mint mx-auto" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.018c0 4.426 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"></path>
        </svg>
      </div>
      
      <!-- Texto -->
      <div class="text-white font-medium text-lg mb-1">
        View GitHub
      </div>
      
      <!-- Subtexto -->
      <div class="text-primary-mint/80 text-sm">
        Click to visit profile
      </div>
    </div>
  </div>
</a>