    { name: "Slide", role: "Java Developer", image: "/assets/smarts/slide.webp" },
    { name: "They", role: "Java Developer", image: "/assets/smarts/they.png" },
    { name: "EpicSpartanRyan", role: "Java/Kotlin Developer", image: "/assets/smarts/ryan.webp" },
